@model IEnumerable<Models.Bid>

@{
    ViewData["Title"] = "ViewProposals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="text-center"> Bids</h3>
<div class="container">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    Bid Amount
                </th>
                <th>
                    Expected Completion Date
                </th>
                <th>
                    Description
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
        <tbody>
            @{if(Model.Count()==0)
            {
                    <tr>
                       No records found
                    </tr>
            }else
            foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BidAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ExpectedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
            }
            }
        </tbody>
    </table>
</div>